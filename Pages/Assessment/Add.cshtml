@page
@model ProjectCRUD.Pages.Assessment.AddModel
@{
}


<h4 class="text-center">Add New Training</h4>



<form method="post">
 
    <div class="form-group">
        <label asp-for="@Model.SelectedParticipantId"></label>
        <select asp-for="@Model.SelectedParticipantId" asp-items="@Model.ParticipantList" class="form-select"></select>
    </div>
  
    <div class="form-group">
        <label asp-for="@Model.SelectedCourseId"></label>
        <select asp-for="@Model.SelectedCourseId" asp-items="@Model.CourseList" class="form-select"></select>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>

    </div>
  
    <div class="row gx-0">
        <button type="submit" class="col btn btn-primary me-1">Register</button>
        <a href="/Assessment/List" class="col btn btn-outline-danger ms-1 ">Cancel</a>
    </div>
</form>