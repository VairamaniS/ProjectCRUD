@page
@model ProjectCRUD.Pages.Courses.ListModel
@{
}


<form method="post">
   
    <div class="row">
        <div class="col-sm-10"><h3>&nbsp;&nbsp;&nbsp;Courses To Be Add</h3></div>
        <div class="col-sm-2">
            <a href="/Courses/Add" class="btn btn-success rounded-pill" role="button">
                <i class="fa fa-add"></i>
                Add
            </a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="input-group">
                <input class="form-control border rounded-pill"
                       type="search" placeholder="type search text" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append">
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <br />


    <table class="table">
        <thead >
            <tr style="text-align:center">
                <th>CorseId</th>
                <th>CourseName</th>
                <th>CourseMaterial</th>
                 <th>Actions</th>
               
                 
                


            </tr>
        </thead>
        <tbody>
            @foreach (var d in @Model.courses)
            {
                <tr  style="text-align:left">
                    <td>@d.CourseId</td>
                    <td>@d.CourseName</td>
                    <td>@d.CourseMaterial</td>
                   

                    
                  
                   
                    <td>
                        <a href="/Courses/Edit/@d.CourseId" class="btn btn-outline-warning" role="button">
                            <i class="fa fa-edit"></i>
                        </a>
                      
                    </td>

                </tr>
            }
        </tbody>
    </table>
</form>